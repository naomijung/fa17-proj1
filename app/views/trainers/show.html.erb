<div style = "margin-left:5%; margin-top: 3%">
  <h3>Trainer</h3>
  <p>Name: <%= @trainer.name if @trainer.name %></p>
  <p>Email: <%= @trainer.email if @trainer.email %></p>
  Pokemon Owned:

  <% if @trainer.pokemons != [] %>
    <table class="table">
      <tr style = "background-color: #CCE5FF">
        <th> Name </th>
        <th> Level </th>
        <th> Health </th>
        <th> Damage </th>
      <tr>
      <% @trainer.pokemons.each do |pokemon| %>
        <tr>
          <td> <%= pokemon.name %> </td>
          <td> <%= pokemon.level %> </td>
          <td> <%= pokemon.health %> </td>
          <td> <%= button_to "Damage!", damage_path(id: pokemon.id), :class => "button medium", :method => :patch %> </td>
        </tr>
      <% end %>
    </table>
  <% end %>

  <% if @trainer.pokemons == [] %>
    None
  <% end %>

  <% if @trainer == current_trainer %>
    <!-- <%= link_to 'Create New Pokemon!', new_path %> -->
    <%= button_to "Create New Pokemon!", new_path, :class => "button medium", method: :get %>
  <% end %>

</div>
